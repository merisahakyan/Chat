
@{
    Layout = null;
}

<html>
<head>
    <title></title>
</head>
<body>
    <div class="main">

        <input type="hidden" id="userid" value=@ViewData["userid"] />
        <input type="hidden" id="roomid" value=@ViewData["roomid"] />
        <input type="hidden" id="username" value=@ViewData["username"] />
        <input type="hidden" id="roomname" value=@ViewData["roomname"] />
        <div id="chatBody">
            <div id="main_div">
                <div id="chatroom" style="position:absolute;left:250px;top:0px; width:800px;height:400px; overflow:auto"></div>

                <div id="inputForm">
                    <input type="text" id="message" style="position:absolute; width:700px;height:40px;left:250px;top:460px" />
                    <input type="button" id="sendmessage" value="send" style="position:absolute; width:100px;height:40px;left:950px;top:460px" />
                </div>
            </div>
            <div style="background-color:antiquewhite; position:absolute;width:250px;height:500px; left:0px;top:0px">
                <div id="members">
                    <div id="header">
                        <p>
                            <b> Room  @ViewData["roomname"]</b>
                            
                        </p>
                    </div>
                    <p style="color:red"><b>Members</b></p>

                </div>

            </div>
        </div>

       
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2-preview1.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/util.js"></script>


</body>
</html>

